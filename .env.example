# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration (Recommended - includes backend + database)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key

# Alternative: Separate Backend API (if not using Supabase)
NEXT_PUBLIC_API_URL=https://your-backend-api.railway.app/api

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Finance Tracker

# Optional: Analytics and Monitoring
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-analytics-id
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
